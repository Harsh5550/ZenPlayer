<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_16sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:background="@color/black">
    <ImageView
        android:id="@+id/video_file"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/video_file"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@id/videoName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/videoName"
        android:contentDescription="@string/video_file" />
    <TextView
        android:id="@+id/videoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/white"
        android:padding="@dimen/_4sdp"
        android:singleLine="true"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/video_file"
        />

</androidx.constraintlayout.widget.ConstraintLayout>